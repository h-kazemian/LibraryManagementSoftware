<Window x:Class="WpfApp1.Employees_Panel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Admin_Panel" Height="700" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Margin="2" Background="Beige"  Width="250" HorizontalAlignment="Center" BorderThickness="2" BorderBrush="Gray">
            <StackPanel>
                <Button Margin="15,50" Background="Bisque" Height="50" Foreground="Black" FontSize="22" Name="btnBooks" Click="btnBooks_Click">Books</Button>
                <Button Margin="15,50" Background="Bisque" Height="50" Foreground="Black" FontSize="22" Name="btnMembers" Click="btnMembers_Click">Members</Button>
                <Button Margin="15,50" Background="Bisque" Height="50" Foreground="Black" FontSize="22" Name="btnWallet" Click="btnWallet_Click">Wallet</Button>
                <Button Margin="15,50" Background="Bisque" Height="50" Foreground="Black" FontSize="22" Name="btnEditinformation" Click="btnEditinformation_Click">Edit information</Button>

            </StackPanel>


        </Border>
        <Border Visibility="Collapsed" Grid.Column="1" Margin="2" Background="WhiteSmoke" HorizontalAlignment="Stretch" Name="BooksPanel"  BorderThickness="2" BorderBrush="Gray">
            <DockPanel>
                <Button Margin="200,500,50,50" Background="Bisque" Height="30" Name="btnAllBooks" Width="150" Click="btnAllBooks_Click" >All Books</Button>
                <Button Margin="50,500,0,50" Background="Bisque" Name="btnBorrowedBooks" Width="150" Height="30" Click="btnBorrowedBooks_Click">Borrowed Books</Button>
                <Button Margin="50,500,50,50" Background="Bisque" Name="btnAvailableBooks" Width="150" Height="30" Click="btnAvailableBooks_Click">Available Books</Button>
            </DockPanel>
        </Border>
        <Border Visibility="Collapsed" Grid.Column="1" Margin="2" Background="WhiteSmoke" HorizontalAlignment="Stretch" Name="MembersOption"  BorderThickness="2" BorderBrush="Gray">
            <DockPanel>
                <Button Margin="15,500,20,50" Background="Bisque" Height="30" Name="btnAllMembers" Width="260" Click="btnAllMembers_Click" >All Members</Button>
                <Button Margin="15,500,20,50" Background="Bisque" Name="btnDeleyBooks" Width="260" Height="30" Click="btnDeleydBooks_Click">Delayed members(for returning book)</Button>
                <Button Margin="15,500,20,50" Background="Bisque" Name="btnDeleyPay" Width="260" Height="30" Click="btnDeleyPay_Click">Delayed members(for pay monthly subscription)</Button>
            </DockPanel>
        </Border>



    </Grid>
</Window>
